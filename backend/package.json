{
  "name": "backend",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm src/server.ts",
    "dev": "NEW_RELIC_ENABLED=false nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/server.ts",
    "test": "NEW_RELIC_ENABLED=false NODE_ENV=test node --loader ts-node/esm --experimental-specifier-resolution=node node_modules/mocha/bin/mocha --timeout 60000 --exit \"test/**/*.test.ts\"",
    "lint": "sh -c 'echo Running ESLint...; npx eslint src test; ESLINT_EXIT=$?; echo Running TypeScript...; tsc --noEmit; TSC_EXIT=$?; exit $((ESLINT_EXIT || TSC_EXIT))'",
    "lintf": "npx eslint src test --fix"
  },
  "dependencies": {
    "@types/express-rate-limit": "^5.1.3",
    "@types/winston": "^2.4.4",
    "axios": "^1.8.4",
    "dotenv": "16.4.1",
    "express": "4.21.2",
    "express-list-endpoints": "6.0.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "7.0.1",
    "firebase-admin": "12.0.0",
    "lodash": "4.17.21",
    "mongoose": "8.13.2",
    "morgan": "^1.10.0",
    "newrelic": "^12.21.0",
    "winston": "^3.17.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/chai": "5.0.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/express": "4.17.21",
    "@types/express-list-endpoints": "6.0.3",
    "@types/lodash": "4.14.202",
    "@types/mocha": "10.0.6",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/newrelic": "^9.14.8",
    "@types/node": "20.11.19",
    "@types/sinon": "10.0.20",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "chai": "5.0.0",
    "chai-as-promised": "^8.0.1",
    "chai-http": "5.1.2",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "mocha": "10.8.2",
    "mongodb-memory-server": "9.1.6",
    "nock": "13.5.3",
    "nodemon": "3.0.3",
    "prettier": "3.2.5",
    "sinon": "17.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
